source 'https://rubygems.org'

# web framework
gem 'roda'

# web server
gem 'puma'

# views
gem 'tilt'

# console (try 'docker run web pry')
gem 'pry'

# needed for escape: true in render
# auto html escaping
# use <%== %> to unescape
gem 'erubi'

# html forms
gem 'forme'

# better logging
gem 'roda-enhanced_logger'

group :development do
  # reload web server on file change
  gem 'rerun'
end
